LucyMuzzleFlash
{
  ejector
  {
    particle
    {
      //shader sync gfx/sprites/smoke
	//shader sync gfx/grenade/smoke
      shader sync gfx/weapons/lucy_swirl

      displacement 0 1 1 ~1.0

      parentVelocityFraction 1.0

      velocityType      cent
      velocityDir       linear
      velocityMagnitude 50
      velocity          1 0 0 0

      accelerationType      static
      accelerationDir       linear
      accelerationMagnitude 1000
      acceleration          0 0 0 0

      radius 0 2.0 16.0
      alpha  0 1.0 0.0
      rotation 0 ~360 ~360
      bounce 0.0

      lifeTime 150
    }
    particle
    {
      //shader sync gfx/sprites/smoke
	//shader sync gfx/grenade/smoke
      shader sync gfx/weapons/flash

      displacement 3 0 0 ~2.0

      parentVelocityFraction 1.0

      velocityType      cent
      velocityDir       linear
      velocityMagnitude 40~75%
      velocity          -1 0 0 0

      accelerationType      static
      accelerationDir       linear
      accelerationMagnitude 0
      acceleration          0 0 0 0

      radius 0 8.0 4.0
      alpha  0 1.0 0.0
      rotation 0 ~180 ~360
      bounce 0.0

      lifeTime 125
    }

    count 4~50%
    delay 0
    period 0 - ~0%
  }
}
